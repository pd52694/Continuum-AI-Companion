{
  "manifest_version": 3,
  "name": "Continuum",
  "version": "1.0",
  "description": "A study tool with goals, timers, tab reminders",

  "permissions": ["storage", "notifications", "scripting", "activeTab"],
  "host_permissions": ["https://*.google.com/*","<all_urls>"],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": ["sidebar/sidebar.html", "sidebar/sidebar.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_title": "Continuum (Click to toggle sidebar)"
  }
}

